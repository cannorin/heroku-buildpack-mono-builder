#!/bin/bash

set -e

cd ~
tar cfz mono.tar.gz mono
mkdir x
cd x

git init
git config --global user.email "AdamBurgess@users.noreply.github.com"
git config --global user.name "Adam Burgess"
git remote add origin git@github.com:AdamBurgess/heroku-buildpack-mono.git

git checkout -b gh-pages

mv ../mono.tar.gz ./
git add mono.tar.gz

VERSION=`git --git-dir=~/git/mono/mono/.git rev-parse --short HEAD`
git commit -m "built mono version $VERSION."
git push -f origin gh-pages 